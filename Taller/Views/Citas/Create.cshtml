@model Taller.Models.CitasModel.Cita
@{

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Nueva cita</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.IdCarroCliente, "Carro", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(
            model => model.IdCarroCliente,
            Model.Carros,
            "Seleccionar Carro",
            new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IdCarroCliente, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaInicio, "Fecha y Hora de Inicio", htmlAttributes: new { @class = "control-label" })
        <input 
               name="FechaInicio"
               type="datetime-local"
               asp-for="FechaInicio"
               class="form-control"
                   value="@Model.FechaInicio.HasValue ? Model.FechaInicio.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty" />
        @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
    </div>


    @if (ViewData["Mensaje"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["Mensaje"]
        </div>

    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-default" id="btnCrear" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Ver listado", "Index")
</div>
